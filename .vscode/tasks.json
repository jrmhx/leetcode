{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run C program",
            "type": "shell",
            "command": "",
            "args": [
                "g++",
                "${relativeFile}",
                "-o",
                "target/${fileBasenameNoExtension}.out",
                "&&",
                "/usr/bin/time",
                "-lp",
                "./target/${fileBasenameNoExtension}.out",
                "<",
                "input.txt",
                ">",
                "output.txt",
                "&&",
                "rm",
                "target/${fileBasenameNoExtension}.out"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/target/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
